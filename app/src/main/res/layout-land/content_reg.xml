<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="65dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.geoaloshious.stegano.reg"
    tools:showIn="@layout/activity_reg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/et_dob"
            android:layout_alignStart="@+id/et_dob"
            android:layout_below="@+id/et_name"
            android:layout_marginTop="31dp"
            android:text="@string/gender"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/box_bg"
            android:ems="10"
            android:hint="Name"
            android:inputType="textCapWords"
            android:drawableLeft="@drawable/ic_uname"
            android:drawablePadding="10dp"/>

        <RadioGroup
            android:id="@+id/rg_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_name"
            android:layout_toRightOf="@+id/tv_gender"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rd_male"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rd_female"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Female"
                android:textColor="@android:color/black"
                android:textStyle="bold" />
        </RadioGroup>

        <EditText
            android:id="@+id/et_dob"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="135dp"
            android:background="@drawable/box_bg"
            android:ems="10"
            android:hint="Date of birth   [dd/mm/yyyy]"
            android:inputType="date"
            android:drawableLeft="@drawable/ic_date"
            android:drawablePadding="10dp"/>

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="195dp"
            android:background="@drawable/box_bg"
            android:ems="10"
            android:hint="Phone No."
            android:inputType="phone"
            android:drawableLeft="@drawable/ic_phone"
            android:drawablePadding="10dp"/>

        <EditText
            android:id="@+id/et_email"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="255dp"
            android:background="@drawable/box_bg"
            android:ems="10"
            android:hint="Email ID"
            android:inputType="textEmailAddress"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="10dp"/>

        <EditText
            android:id="@+id/et_uname"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="315dp"
            android:background="@drawable/box_bg"
            android:ems="10"
            android:hint="Username"
            android:inputType="textPersonName"
            android:drawableLeft="@drawable/ic_uname"
            android:drawablePadding="10dp"/>

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="375dp"
            android:background="@drawable/box_bg"
            android:ems="10"
            android:hint="Password"
            android:inputType="numberPassword"
            android:drawableLeft="@drawable/ic_password"
            android:drawablePadding="10dp"/>

        <EditText
            android:id="@+id/et_repwd"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="435dp"
            android:background="@drawable/box_bg"
            android:ems="10"
            android:hint="Retype password"
            android:inputType="numberPassword"
            android:drawableLeft="@drawable/ic_retype"
            android:drawablePadding="10dp"/>

        <Button
            android:id="@+id/bt_ok"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_alignBaseline="@+id/et_pwd"
            android:layout_alignBottom="@+id/et_pwd"
            android:layout_alignEnd="@+id/et_pwd"
            android:layout_alignRight="@+id/et_pwd"
            android:layout_marginEnd="9dp"
            android:layout_marginRight="9dp"
            android:background="@android:color/transparent"
            android:text="OK"
            android:textColor="#075e54" />

        <Button
            android:id="@+id/bt_signup"
            android:layout_width="350dp"
            android:layout_height="35dp"
            android:layout_below="@id/et_repwd"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/button_bg2"
            android:text="Signup"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="18dp"/>

    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
