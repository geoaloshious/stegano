<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="100dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.geoaloshious.stegano.change_pwd"
    tools:showIn="@layout/activity_change_pwd">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/et_old"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/et_new"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/et_new"
        android:background="@drawable/box_bg"
        android:ems="10"
        android:hint="old password"
        android:inputType="numberPassword"
        android:drawableLeft="@drawable/ic_oldpwd"
        android:drawablePadding="10dp" />

    <Button
        android:id="@+id/bt_ok_old"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignBaseline="@+id/et_old"
        android:layout_alignBottom="@+id/et_old"
        android:layout_alignEnd="@+id/et_old"
        android:layout_alignRight="@+id/et_old"
        android:background="@android:color/transparent"
        android:text="OK"
        android:textColor="#075e54" />

    <EditText
        android:id="@+id/et_new"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:layout_below="@+id/et_old"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:background="@drawable/box_bg"
        android:ems="10"
        android:hint="new password"
        android:inputType="numberPassword"
        android:drawableLeft="@drawable/ic_password"
        android:drawablePadding="10dp"/>

    <EditText
        android:id="@+id/et_renew"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/et_new"
        android:layout_alignStart="@+id/et_new"
        android:layout_below="@+id/et_new"
        android:layout_marginTop="19dp"
        android:background="@drawable/box_bg"
        android:ems="10"
        android:hint="retype password"
        android:inputType="numberPassword"
        android:drawableLeft="@drawable/ic_retype"
        android:drawablePadding="10dp" />

    <Button
        android:id="@+id/bt_save"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:layout_alignEnd="@+id/bt_ok_new"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/bt_ok_new"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/button_bg2"
        android:text="Change Password"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18dp" />

    <Button
        android:id="@+id/bt_ok_new"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/et_new"
        android:layout_alignEnd="@+id/et_new"
        android:layout_alignRight="@+id/et_new"
        android:layout_marginBottom="5dp"
        android:background="@android:color/transparent"
        android:text="OK"
        android:textColor="#075e54" />

    <Button
        android:id="@+id/bt_cancel"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@+id/et_renew"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:layout_toLeftOf="@+id/bt_save"
        android:background="@drawable/button_bg"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textColor="#075e54"
        android:textSize="18dp"
        android:textStyle="bold" />
</RelativeLayout>
</android.support.v4.widget.NestedScrollView>
