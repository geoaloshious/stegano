<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.example.geoaloshious.stegano.login"
    tools:ignore="Overdraw">

    <RelativeLayout
        android:id="@+id/rv_round"
        android:layout_width="120dp"
        android:layout_height="115dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/roundshape">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_sample"
            android:layout_width="62dp"
            android:layout_height="110dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />
    </RelativeLayout>

    <Switch
        android:id="@+id/stegano"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/security"
        android:textSize="12sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/et_uname"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_above="@+id/et_pwd"
        android:drawableLeft="@drawable/ic_uname"
        android:drawablePadding="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/box_bg"
        android:layout_marginBottom="9dp"
        android:ems="10"
        android:hint="@string/username"
        android:inputType="textPersonName" android:drawableStart="@drawable/ic_uname" android:paddingStart="10dp"
        android:paddingLeft="10dp" />

    <EditText
        android:id="@+id/et_pwd"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="@drawable/box_bg"
        android:drawableLeft="@drawable/ic_password"
        android:drawablePadding="10dp"
        android:layout_alignLeft="@+id/et_uname"
        android:layout_alignStart="@+id/et_uname"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="numberPassword" android:drawableStart="@drawable/ic_password" android:paddingStart="10dp"
        android:paddingLeft="10dp" />

    <Button
        android:id="@+id/bt_login"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:background="@drawable/button_bg2"
        android:layout_below="@+id/et_pwd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/login"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/bt_signup"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_below="@+id/bt_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_bg"
        android:text="@string/signup"
        android:textAllCaps="false"
        android:textColor="#075e54"
        android:textSize="18sp"/>

</RelativeLayout>
