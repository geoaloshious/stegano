<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.example.geoaloshious.stegano.edit_profile">
    <TextView
        android:id="@+id/tv_edit_profile"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="EDIT PROFILE"
        android:textAllCaps="true"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="#075e54"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tv_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_name"
        android:layout_alignStart="@+id/et_name"
        android:layout_alignTop="@+id/rg_gender"
        android:layout_marginTop="6dp"
        android:text="Gender"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/box_bg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:inputType="textCapWords"
        android:hint="Name"
        android:drawableLeft="@drawable/ic_uname"
        android:drawablePadding="10dp"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_name"
        android:layout_toRightOf="@+id/tv_gender"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal"
        android:id="@+id/rg_gender">

        <RadioButton
            android:id="@+id/rd_male"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/rg_gender"
            android:layout_alignStart="@+id/rg_gender"
            android:layout_alignTop="@+id/rg_gender"
            android:text="Male"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rd_female"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Female"
            android:textStyle="bold"
            android:textColor="@android:color/black" />
    </RadioGroup>

    <EditText
        android:id="@+id/et_dob"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/box_bg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="30dp"
        android:ems="10"
        android:inputType="date"
        android:hint="Date of birth   [dd/mm/yyyy]"
        android:drawableLeft="@drawable/ic_date"
        android:drawablePadding="10dp"/>

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/box_bg"
        android:layout_marginTop="290dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="phone"
        android:hint="Phone No."
        android:drawableLeft="@drawable/ic_phone"
        android:drawablePadding="10dp"/>

    <EditText
        android:id="@+id/et_email"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/box_bg"
        android:layout_marginTop="350dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="Email ID"
        android:drawableLeft="@drawable/ic_email"
        android:drawablePadding="10dp"/>

    <Button
        android:id="@+id/bt_save"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignEnd="@+id/tv_edit_profile"
        android:layout_alignRight="@+id/tv_edit_profile"
        android:layout_below="@+id/et_email"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_bg2"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18dp"/>

    <Button
        android:id="@+id/bt_cancel"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/bt_save"
        android:layout_alignLeft="@+id/tv_edit_profile"
        android:layout_alignStart="@+id/tv_edit_profile"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/button_bg"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textColor="#075e54"
        android:textSize="18dp"/>
</RelativeLayout>
