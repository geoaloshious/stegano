<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="140dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.geoaloshious.stegano.reg"
    tools:showIn="@layout/activity_reg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="90dp"
            android:text="@string/gender"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/box_bg"
            android:layout_marginTop="17dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Name"
            android:paddingLeft="10dp"/>
<RadioGroup
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="83dp"
    android:layout_marginLeft="105dp"
    android:orientation="horizontal"
    android:id="@+id/rg_gender">

    <RadioButton
        android:id="@+id/rd_male"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:text="Male"
        android:textColor="@android:color/black"
        android:textStyle="bold"/>

    <RadioButton
        android:id="@+id/rd_female"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Female"
        android:textStyle="bold"
        android:textColor="@android:color/black" />
</RadioGroup>

        <EditText
            android:id="@+id/et_dob"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="135dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/box_bg"
            android:ems="10"
            android:inputType="date"
            android:hint="Date of birth"
            android:paddingLeft="10dp"/>

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="@drawable/box_bg"
            android:layout_marginTop="195dp"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:inputType="phone"
            android:hint="Phone No."
            android:paddingLeft="10dp"/>

        <EditText
            android:id="@+id/et_email"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="254dp"
            android:background="@drawable/box_bg"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:hint="Email ID"
            android:paddingLeft="10dp"/>

        <EditText
            android:id="@+id/et_uname"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="315dp"
            android:background="@drawable/box_bg"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Username"
            android:paddingLeft="10dp"/>

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="@drawable/box_bg"
            android:layout_marginTop="375dp"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:inputType="numberPassword"
            android:hint="Password"
            android:paddingLeft="10dp"/>

        <EditText
            android:id="@+id/et_repwd"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="434dp"
            android:background="@drawable/box_bg"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:inputType="numberPassword"
            android:hint="Retype password"
            android:paddingLeft="10dp"/>

        <Button
            android:id="@+id/bt_ok"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:background="@android:color/transparent"
            android:layout_marginTop="382dp"
            android:layout_marginLeft="278dp"
            android:text="OK"
            android:textColor="#075e54"/>
        <Button
            android:id="@+id/bt_signup"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/button_bg"
            android:layout_marginTop="490dp"
            android:layout_centerHorizontal="true"
            android:text="SIGNUP"
            android:textColor="#075e54"/>

    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
